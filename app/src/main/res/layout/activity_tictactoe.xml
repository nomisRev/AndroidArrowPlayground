<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/game_state"
        android:layout_marginTop="@dimen/spacing_xlarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        tool:text="Player X's turn" />

    <Button
        android:id="@+id/x0y0"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/x0y1"
        app:layout_constraintEnd_toStartOf="@+id/x1y0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_state"
        app:layout_constraintVertical_chainStyle="packed"
        tool:text="X"/>

    <Button
        android:id="@+id/x1y0"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/x0y0"
        app:layout_constraintEnd_toStartOf="@+id/x2y0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/x0y0"
        app:layout_constraintTop_toTopOf="@+id/x0y0"
        tool:text="X"/>

    <Button
        android:id="@+id/x2y0"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/x0y0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/x1y0"
        app:layout_constraintTop_toTopOf="@+id/x0y0"
        tool:text="O"/>

    <Button
        android:id="@+id/x0y1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/x0y2"
        app:layout_constraintEnd_toStartOf="@+id/x1y1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/x0y0"
        app:layout_constraintTop_toBottomOf="@+id/x0y0"
        app:layout_constraintVertical_chainStyle="packed"
        tool:text="O"/>

    <Button
        android:id="@+id/x1y1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/x0y1"
        app:layout_constraintEnd_toStartOf="@+id/x2y1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/x0y1"
        app:layout_constraintTop_toTopOf="@+id/x0y1"
        tool:text="X"/>

    <Button
        android:id="@+id/x2y1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/x0y1"
        app:layout_constraintEnd_toEndOf="@+id/x2y0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/x1y1"
        app:layout_constraintTop_toTopOf="@+id/x0y1"
        tool:text="O"/>

    <Button
        android:id="@+id/x0y2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/x1y2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/x0y0"
        app:layout_constraintTop_toBottomOf="@+id/x0y1"
        app:layout_constraintVertical_chainStyle="packed"
        tool:text="X"/>

    <Button
        android:id="@+id/x1y2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/x0y2"
        app:layout_constraintEnd_toStartOf="@+id/x2y2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/x0y2"
        app:layout_constraintTop_toTopOf="@+id/x0y2"
        tool:text="O"/>

    <Button
        android:id="@+id/x2y2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/x0y2"
        app:layout_constraintEnd_toEndOf="@+id/x2y0"
        app:layout_constraintStart_toEndOf="@+id/x1y2"
        app:layout_constraintTop_toTopOf="@+id/x0y2"
        tool:text="O"/>

</android.support.constraint.ConstraintLayout>